<!DOCTYPE html>
<html>
<head>
    <title>Fullstack Lab</title>
    <style>
        body { font-family: sans-serif; margin: 40px; }
        .user-card { border: 1px solid #ccc; padding: 10px; margin: 10px 0; border-radius: 4px; }
    </style>
</head>
<body>
    <h1>User Liste (vom Backend)</h1>
    <div id="user-list">LÃ¤dt Daten...</div>

    <script>
        // WICHTIG: Hier nutzen wir die Mac-IP oder localhost, 
        // da der BROWSER des Users die Anfrage stellt, nicht der Container!
        fetch('http://localhost:3000/')
            .then(response => response.json())
            .then(payload => {
                const container = document.getElementById('user-list');
                container.innerHTML = '';
                payload.data.forEach(user => {
                    const div = document.createElement('div');
                    div.className = 'user-card';
                    div.innerText = `ID: ${user.id} - Name: ${user.name}`;
                    container.appendChild(div);
                });
            })
            .catch(err => {
                document.getElementById('user-list').innerText = 'Fehler: ' + err;
            });
    </script>
</body>
</html>
